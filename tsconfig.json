{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./miniprogram",
    "paths": {
      "@/types/*": ["types/*"],
      "@/services/*": ["services/*"],
      "@/utils/*": ["utils/*"],
      "@/store/*": ["store/*"]
    }
  },
  "include": [
    "miniprogram/**/*.ts",
    "miniprogram/**/*.d.ts"
  ]
}
