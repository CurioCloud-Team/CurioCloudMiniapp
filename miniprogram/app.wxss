/* ===== 全局 CSS 变量 - 毛玻璃/液态玻璃设计系统 ===== */
page {
  /* 主色调 - 渐变紫蓝 */
  --color-primary: #6366f1;
  --color-primary-light: #818cf8;
  --color-primary-dark: #4f46e5;
  --color-secondary: #8b5cf6;
  
  /* 背景色 */
  --bg-gradient-start: #e0e7ff;
  --bg-gradient-mid: #ede9fe;
  --bg-gradient-end: #faf5ff;
  --bg-page: linear-gradient(145deg, var(--bg-gradient-start) 0%, var(--bg-gradient-mid) 50%, var(--bg-gradient-end) 100%);
  
  /* 毛玻璃效果 */
  --glass-bg: rgba(255, 255, 255, 0.65);
  --glass-bg-light: rgba(255, 255, 255, 0.45);
  --glass-bg-heavy: rgba(255, 255, 255, 0.85);
  --glass-border: rgba(255, 255, 255, 0.5);
  --glass-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.12);
  --glass-shadow-lg: 0 16rpx 48rpx rgba(99, 102, 241, 0.18);
  --glass-blur: blur(24rpx);
  --glass-blur-heavy: blur(40rpx);
  
  /* 文字颜色 */
  --text-primary: #1e1b4b;
  --text-secondary: #4338ca;
  --text-muted: #6366f1;
  --text-light: #a5b4fc;
  
  /* 圆角 */
  --radius-sm: 16rpx;
  --radius-md: 24rpx;
  --radius-lg: 32rpx;
  --radius-xl: 48rpx;
  --radius-full: 999rpx;
  
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  
  /* 动画 */
  --transition-fast: 0.2s ease;
  --transition-normal: 0.3s ease;
  --transition-slow: 0.5s ease;
  
  background: var(--bg-page);
  background-attachment: fixed;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  color: var(--text-primary);
  padding-bottom: 180rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

/* ===== 容器样式 ===== */
.container {
  padding: var(--spacing-md) var(--spacing-lg);
}

/* ===== 毛玻璃卡片 ===== */
.section,
.glass-card {
  margin-bottom: var(--spacing-lg);
  background: var(--glass-bg);
  backdrop-filter: var(--glass-blur);
  -webkit-backdrop-filter: var(--glass-blur);
  border-radius: var(--radius-lg);
  border: 2rpx solid var(--glass-border);
  box-shadow: var(--glass-shadow);
  padding: var(--spacing-lg);
  transition: all var(--transition-normal);
}

.section:active,
.glass-card:active {
  transform: scale(0.98);
  box-shadow: var(--glass-shadow-lg);
}

/* ===== 主按钮 - 渐变玻璃效果 ===== */
.primary-button,
.primary {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  color: #fff;
  border-radius: var(--radius-full);
  padding: var(--spacing-md) 0;
  text-align: center;
  font-weight: 600;
  font-size: 30rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.35);
  transition: all var(--transition-fast);
  position: relative;
  overflow: hidden;
}

.primary-button::after,
.primary::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.25) 0%, transparent 50%);
  border-radius: inherit;
  pointer-events: none;
}

.primary-button:active,
.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.25);
}

/* ===== 次要按钮 - 玻璃边框 ===== */
.secondary-button,
.ghost {
  background: var(--glass-bg-light);
  backdrop-filter: var(--glass-blur);
  -webkit-backdrop-filter: var(--glass-blur);
  border: 2rpx solid var(--color-primary-light);
  color: var(--color-primary);
  border-radius: var(--radius-full);
  padding: 22rpx 0;
  text-align: center;
  font-weight: 500;
  transition: all var(--transition-fast);
}

.secondary-button:active,
.ghost:active {
  background: rgba(99, 102, 241, 0.1);
  transform: scale(0.98);
}

/* ===== 链接按钮 ===== */
.link {
  background: transparent;
  color: var(--text-muted);
  border: none;
  font-size: 28rpx;
}

.link:active {
  color: var(--color-primary);
}

/* ===== 文字样式 ===== */
.text-muted {
  color: var(--text-light);
  font-size: 24rpx;
}

/* ===== 标签徽章 - 玻璃效果 ===== */
.badge {
  padding: 8rpx 20rpx;
  border-radius: var(--radius-full);
  font-size: 22rpx;
  font-weight: 500;
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
}

.badge-success {
  background: rgba(16, 185, 129, 0.2);
  color: #059669;
  border: 1rpx solid rgba(16, 185, 129, 0.3);
}

.badge-warning {
  background: rgba(251, 191, 36, 0.2);
  color: #d97706;
  border: 1rpx solid rgba(251, 191, 36, 0.3);
}

.badge-info {
  background: rgba(99, 102, 241, 0.2);
  color: var(--color-primary);
  border: 1rpx solid rgba(99, 102, 241, 0.3);
}

/* ===== 输入框玻璃样式 ===== */
.glass-input {
  background: var(--glass-bg-light);
  backdrop-filter: var(--glass-blur);
  -webkit-backdrop-filter: var(--glass-blur);
  border: 2rpx solid var(--glass-border);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  transition: all var(--transition-fast);
}

.glass-input:focus {
  border-color: var(--color-primary-light);
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.15);
}

/* ===== 页面通用样式 ===== */
.page {
  padding: var(--spacing-lg);
  min-height: 100vh;
}

/* ===== 空状态 ===== */
.empty {
  text-align: center;
  padding: var(--spacing-xl) 0;
  color: var(--text-light);
}

/* ===== 加载状态 ===== */
.loading {
  text-align: center;
  color: var(--text-muted);
  padding: var(--spacing-xl);
}

/* ===== 装饰性模糊圆 ===== */
.blur-circle {
  position: fixed;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.6;
  pointer-events: none;
  z-index: -1;
}

.blur-circle-1 {
  width: 400rpx;
  height: 400rpx;
  background: rgba(99, 102, 241, 0.3);
  top: -100rpx;
  right: -100rpx;
}

.blur-circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: rgba(139, 92, 246, 0.25);
  bottom: 200rpx;
  left: -80rpx;
}

.blur-circle-3 {
  width: 250rpx;
  height: 250rpx;
  background: rgba(236, 72, 153, 0.2);
  top: 50%;
  right: -60rpx;
}
