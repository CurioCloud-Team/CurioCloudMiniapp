<view class="feature-card" bindtap="onTap" hover-class="feature-card--active">
  <!-- 装饰性渐变背景 -->
  <view class="card-glow"></view>
  
  <!-- 图标容器 -->
  <view class="icon-wrapper">
    <view class="icon-bg"></view>
    <view class="icon-container">
      <t-icon wx:if="{{icon}}" name="{{icon}}" size="48rpx" color="#6366f1" />
      <slot wx:else name="icon"></slot>
    </view>
  </view>
  
  <!-- 内容区域 -->
  <view class="content">
    <view class="title">{{title}}</view>
    <view class="description">{{description}}</view>
  </view>
  
  <!-- 箭头指示器 -->
  <view class="arrow-wrapper">
    <t-icon name="chevron-right" size="40rpx" color="#a5b4fc" />
  </view>
</view>
