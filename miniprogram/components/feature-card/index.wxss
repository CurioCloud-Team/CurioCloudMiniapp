.feature-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 24rpx;
}

.icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: rgba(99, 102, 241, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.content {
  flex: 1;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
}

.description {
  color: #64748b;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.chevron {
  font-size: 40rpx;
  color: #94a3b8;
}
