.feature-card {
  display: flex;
  align-items: center;
  position: relative;
  background: rgba(255, 255, 255, 0.55);
  backdrop-filter: blur(24rpx);
  -webkit-backdrop-filter: blur(24rpx);
  border-radius: 28rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: 
    0 8rpx 32rpx rgba(99, 102, 241, 0.08),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.feature-card--active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 
    0 4rpx 16rpx rgba(99, 102, 241, 0.12),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

/* 装饰性渐变光晕 */
.card-glow {
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(99, 102, 241, 0.15) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

/* 图标包装器 */
.icon-wrapper {
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

/* 图标背景光晕 */
.icon-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.2) 0%, rgba(139, 92, 246, 0.15) 100%);
  border-radius: 24rpx;
  filter: blur(8rpx);
}

/* 图标容器 */
.icon-container {
  position: relative;
  width: 88rpx;
  height: 88rpx;
  border-radius: 22rpx;
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.9) 0%, rgba(238, 242, 255, 0.8) 100%);
  border: 2rpx solid rgba(99, 102, 241, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 4rpx 16rpx rgba(99, 102, 241, 0.1),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 1);
}

/* 内容区域 */
.content {
  flex: 1;
  min-width: 0;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e1b4b;
  line-height: 1.3;
  margin-bottom: 6rpx;
}

.description {
  font-size: 26rpx;
  color: #6366f1;
  opacity: 0.8;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 箭头指示器 */
.arrow-wrapper {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
}
