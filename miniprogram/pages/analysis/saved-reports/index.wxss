.page {
  padding: 32rpx;
}

.loading {
  text-align: center;
  color: #94a3b8;
  margin-top: 180rpx;
}

.report-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
}

.date {
  color: #64748b;
  font-size: 24rpx;
}

.meta {
  display: block;
  margin-top: 16rpx;
  color: #475569;
}

.empty {
  text-align: center;
  margin-top: 200rpx;
  color: #94a3b8;
}

.empty button {
  margin-top: 24rpx;
}
