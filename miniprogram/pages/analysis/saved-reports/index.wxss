/* 页面基础 */
.page {
  min-height: 100vh;
  background: linear-gradient(145deg, #f0f4ff 0%, #faf5ff 50%, #f0fdff 100%);
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
  position: relative;
  overflow: hidden;
}

/* 装饰背景 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.5;
}

.orb-1 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  top: 100rpx;
  right: -100rpx;
  animation: float1 8s ease-in-out infinite;
}

.orb-2 {
  width: 250rpx;
  height: 250rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  top: 50%;
  left: -80rpx;
  animation: float2 10s ease-in-out infinite;
}

.orb-3 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  bottom: 200rpx;
  right: 60rpx;
  animation: float3 12s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-30rpx) scale(1.05); }
}

@keyframes float2 {
  0%, 100% { transform: translateX(0) scale(1); }
  50% { transform: translateX(20rpx) scale(0.95); }
}

@keyframes float3 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-20rpx, 20rpx) scale(1.1); }
}

/* TDesign 导航栏样式 */
.custom-navbar {
  --td-navbar-bg-color: rgba(255, 255, 255, 0.85);
  --td-navbar-title-font-size: 36rpx;
  --td-navbar-title-color: #667eea;
  --td-navbar-left-arrow-color: #667eea;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: calc(env(safe-area-inset-top) + 96rpx + 200rpx);
  position: relative;
  z-index: 1;
}

/* 内容区域 */
.content-area {
  position: relative;
  z-index: 1;
  padding: calc(env(safe-area-inset-top) + 96rpx + 32rpx) 32rpx 32rpx;
}

/* 统计横幅 */
.stats-banner {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  padding: 24rpx 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: center;
}

.stats-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.stats-value {
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.stats-label {
  font-size: 28rpx;
  color: #64748b;
}

/* 报告列表 */
.report-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
  padding: 28rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.3s ease;
}

.report-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.card-content {
  flex: 1;
  min-width: 0;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.card-arrow {
  flex-shrink: 0;
}

.card-meta {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.meta-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #64748b;
}

/* 列表底部 */
.list-footer {
  text-align: center;
  padding: 32rpx;
  color: #94a3b8;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 180rpx;
  position: relative;
  z-index: 1;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 48rpx;
}

.empty-btn {
  --td-button-primary-bg-color: #667eea;
  --td-button-primary-border-color: transparent;
  --td-button-border-radius: 24rpx;
  --td-button-large-height: 96rpx;
  --td-button-large-font-size: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  border: none !important;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  min-width: 300rpx;
}

.empty-btn t-icon {
  margin-right: 12rpx;
}
