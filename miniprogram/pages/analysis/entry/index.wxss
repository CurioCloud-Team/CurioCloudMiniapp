.page {
  padding: 32rpx;
}

.form-field {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  color: #1f2937;
}

.input,
.textarea {
  width: 100%;
  background: #f8fafc;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.textarea {
  min-height: 220rpx;
}

.hint {
  display: block;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #64748b;
}

button {
  margin-bottom: 20rpx;
}

button.secondary {
  background: #fff;
  color: #2563eb;
  border: 2rpx solid #bfdbfe;
}
