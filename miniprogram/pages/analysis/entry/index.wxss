/* 页面基础 */
.page {
  min-height: 100vh;
  background: linear-gradient(145deg, #f0f4ff 0%, #faf5ff 50%, #f0fdff 100%);
  position: relative;
  overflow: hidden;
}

/* 装饰背景 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.6;
}

.orb-1 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  top: 100rpx;
  right: -100rpx;
  animation: float1 8s ease-in-out infinite;
}

.orb-2 {
  width: 250rpx;
  height: 250rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  top: 50%;
  left: -80rpx;
  animation: float2 10s ease-in-out infinite;
}

.orb-3 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  bottom: 200rpx;
  right: 60rpx;
  animation: float3 12s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-30rpx) scale(1.05); }
}

@keyframes float2 {
  0%, 100% { transform: translateX(0) scale(1); }
  50% { transform: translateX(20rpx) scale(0.95); }
}

@keyframes float3 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-20rpx, 20rpx) scale(1.1); }
}

/* TDesign 导航栏样式 */
.custom-navbar {
  --td-navbar-bg-color: rgba(255, 255, 255, 0.85);
  --td-navbar-title-font-size: 36rpx;
  --td-navbar-title-color: #667eea;
}

.navbar-action {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  margin-right: 16rpx;
}

/* 内容区域 */
.content-area {
  position: relative;
  z-index: 1;
  padding: calc(env(safe-area-inset-top) + 96rpx + 32rpx) 32rpx 32rpx;
}

/* 提示卡片 */
.tip-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  margin-bottom: 32rpx;
}

.tip-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
}

.tip-desc {
  font-size: 26rpx;
  color: #64748b;
}

/* 表单卡片 */
.form-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
  padding: 32rpx;
  margin-bottom: 40rpx;
}

/* 表单字段 */
.form-field {
  margin-bottom: 32rpx;
}

.form-field:last-child {
  margin-bottom: 0;
}

.field-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

/* 输入框 */
.input-wrapper {
  background: rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.15);
  overflow: hidden;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: rgba(102, 126, 234, 0.4);
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.custom-input {
  height: 96rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #1e293b;
  background: transparent;
  width: 100%;
  box-sizing: border-box;
}

.custom-input::placeholder {
  color: #94a3b8;
}

/* 文本域 */
.textarea-wrapper {
  background: rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.15);
  overflow: hidden;
  transition: all 0.3s ease;
}

.textarea-wrapper:focus-within {
  border-color: rgba(102, 126, 234, 0.4);
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.custom-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1e293b;
  background: transparent;
  line-height: 1.6;
  box-sizing: border-box;
}

.custom-textarea::placeholder {
  color: #94a3b8;
}

/* 提示框 */
.hint-box {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background: rgba(100, 116, 139, 0.05);
  border-radius: 12rpx;
}

.hint {
  font-size: 24rpx;
  color: #64748b;
}

/* 操作按钮区域 */
.actions-area {
  margin-top: 20rpx;
}

.submit-btn {
  --td-button-primary-bg-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --td-button-primary-border-color: transparent;
  --td-button-border-radius: 24rpx;
  --td-button-large-height: 104rpx;
  --td-button-large-font-size: 32rpx;
  border: none !important;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.submit-btn t-icon {
  margin-right: 12rpx;
}

.secondary-action {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 32rpx;
  padding: 24rpx;
}

.secondary-action text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}
