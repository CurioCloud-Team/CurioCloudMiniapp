/* 页面基础 */
.page {
  min-height: 100vh;
  background: linear-gradient(145deg, #f0f4ff 0%, #faf5ff 50%, #f0fdff 100%);
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
  position: relative;
  overflow: hidden;
}

/* 装饰背景 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.5;
}

.orb-1 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  top: 100rpx;
  right: -100rpx;
  animation: float1 8s ease-in-out infinite;
}

.orb-2 {
  width: 250rpx;
  height: 250rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  top: 50%;
  left: -80rpx;
  animation: float2 10s ease-in-out infinite;
}

.orb-3 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  bottom: 200rpx;
  right: 60rpx;
  animation: float3 12s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-30rpx) scale(1.05); }
}

@keyframes float2 {
  0%, 100% { transform: translateX(0) scale(1); }
  50% { transform: translateX(20rpx) scale(0.95); }
}

@keyframes float3 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-20rpx, 20rpx) scale(1.1); }
}

/* TDesign 导航栏样式 */
.custom-navbar {
  --td-navbar-bg-color: rgba(255, 255, 255, 0.85);
  --td-navbar-title-font-size: 36rpx;
  --td-navbar-title-color: #667eea;
  --td-navbar-left-arrow-color: #667eea;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: calc(env(safe-area-inset-top) + 96rpx + 200rpx);
  position: relative;
  z-index: 1;
}

/* 内容区域 */
.content-area {
  position: relative;
  z-index: 1;
  padding: calc(env(safe-area-inset-top) + 96rpx + 32rpx) 32rpx 32rpx;
}

/* Hero 卡片 */
.hero-card {
  position: relative;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.hero-content {
  position: relative;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.hero-icon {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.hero-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 16rpx;
}

.hero-meta {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
}

/* 区块卡片 */
.section-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 28rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  background: rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.stat-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.stat-avg .stat-icon { background: rgba(102, 126, 234, 0.1); }
.stat-high .stat-icon { background: rgba(16, 185, 129, 0.1); }
.stat-low .stat-icon { background: rgba(245, 158, 11, 0.1); }
.stat-pass .stat-icon { background: rgba(139, 92, 246, 0.1); }

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #1e293b;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 4rpx;
}

/* 分数段分布 */
.distribution-section {
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(102, 126, 234, 0.1);
}

.distribution-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 20rpx;
  display: block;
}

.distribution-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.distribution-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.range-label {
  font-size: 26rpx;
  color: #64748b;
  width: 120rpx;
  flex-shrink: 0;
}

.bar-container {
  flex: 1;
  height: 24rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  transition: width 0.5s ease;
}

.count-label {
  font-size: 26rpx;
  color: #1e293b;
  font-weight: 500;
  width: 80rpx;
  text-align: right;
}

/* 洞察列表 */
.insights-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.insight-card {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
  padding: 24rpx;
  border-left: 6rpx solid;
  border-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%) 1;
}

.insight-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.insight-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.insight-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
}

.insight-desc {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.6;
  display: block;
  margin-bottom: 16rpx;
}

.suggestions {
  padding-top: 16rpx;
  border-top: 1rpx dashed rgba(102, 126, 234, 0.2);
}

.suggestions-label {
  font-size: 24rpx;
  color: #94a3b8;
  margin-bottom: 12rpx;
  display: block;
}

.suggestion-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.suggestion-tag {
  --td-tag-primary-light-color: rgba(102, 126, 234, 0.1);
  --td-tag-primary-color: #667eea;
}

/* 推荐行动 */
.actions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 20rpx;
  background: rgba(16, 185, 129, 0.05);
  border-radius: 16rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  background: rgba(16, 185, 129, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.action-text {
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
}

/* 底部操作 */
.bottom-actions {
  margin-top: 40rpx;
}

.back-btn-primary {
  --td-button-primary-bg-color: #667eea;
  --td-button-primary-border-color: transparent;
  --td-button-border-radius: 24rpx;
  --td-button-large-height: 104rpx;
  --td-button-large-font-size: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  border: none !important;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.back-btn-primary t-icon {
  margin-right: 8rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
  position: relative;
  z-index: 1;
}

.empty-icon {
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #94a3b8;
  margin-bottom: 32rpx;
}
