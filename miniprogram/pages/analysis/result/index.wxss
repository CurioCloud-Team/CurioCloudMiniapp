.page {
  padding: 32rpx;
}

.loading,
.empty {
  text-align: center;
  color: #94a3b8;
  margin-top: 200rpx;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.04);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
}

.subtitle,
.meta {
  display: block;
  color: #64748b;
  margin-top: 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.summary-item {
  background: #f8fafc;
  border-radius: 18rpx;
  padding: 20rpx;
}

.summary-item .label {
  color: #64748b;
  font-size: 24rpx;
}

.summary-item .value {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
}

.distribution-title {
  font-weight: 600;
  margin: 24rpx 0 12rpx;
}

.distribution-row {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.distribution-row:last-child {
  border-bottom: none;
}

.insight {
  margin-bottom: 24rpx;
}

.insight-title {
  font-weight: 600;
  margin-bottom: 8rpx;
}

.insight-desc {
  color: #475569;
}

.suggestions {
  margin-top: 12rpx;
}

.suggestion-label {
  color: #94a3b8;
  margin-right: 12rpx;
}

.suggestion-chip {
  display: inline-block;
  background: #e0f2fe;
  color: #0369a1;
  border-radius: 999rpx;
  padding: 6rpx 20rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.action-item {
  padding: 12rpx 0;
  border-bottom: 1rpx dashed #e2e8f0;
}

.action-item:last-child {
  border-bottom: none;
}

button {
  margin-top: 16rpx;
}
