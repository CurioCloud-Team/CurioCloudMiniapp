.page {
  min-height: 100vh;
  background: linear-gradient(145deg, #f0f4ff 0%, #faf5ff 50%, #ecfdf5 100%);
  position: relative;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
}

/* 自定义导航栏样式 */
.custom-navbar {
  --td-navbar-bg-color: rgba(255, 255, 255, 0.85);
  --td-navbar-title-font-size: 34rpx;
  --td-navbar-title-color: #1e293b;
}

.nav-avatar {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

/* 装饰背景 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.5;
}

.orb-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  top: -100rpx;
  right: -100rpx;
  animation: float1 8s ease-in-out infinite;
}

.orb-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #f093fb, #f5576c);
  bottom: 200rpx;
  left: -80rpx;
  animation: float2 10s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-30rpx, 30rpx) scale(1.1); }
}

@keyframes float2 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(20rpx, -20rpx) scale(1.05); }
}

/* ========== 对话式新建模式样式 ========== */

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 32rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

/* 对话区域 */
.chat-container {
  position: relative;
  z-index: 1;
  height: calc(100vh - 400rpx - env(safe-area-inset-top));
  padding: calc(env(safe-area-inset-top) + 24rpx) 32rpx 32rpx;
}

.chat-messages {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 32rpx;
}

/* 消息气泡 */
.message-wrapper {
  display: flex;
  max-width: 85%;
}

.message-wrapper.ai {
  align-self: flex-start;
}

.message-wrapper.user {
  align-self: flex-end;
}

.message-bubble {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  border-radius: 24rpx;
}

.message-wrapper.ai .message-bubble {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
}

.message-wrapper.user .message-bubble {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
}

.message-avatar {
  width: 48rpx;
  height: 48rpx;
  min-width: 48rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.message-content {
  font-size: 28rpx;
  line-height: 1.6;
  word-break: break-word;
}

.message-wrapper.ai .message-content {
  color: #1e293b;
}

.message-wrapper.user .message-content {
  color: #fff;
}

/* 问答卡片 */
.question-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.9);
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -8rpx 32rpx rgba(102, 126, 234, 0.1);
}

.question-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.question-icon {
  width: 56rpx;
  height: 56rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.question-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #475569;
}

/* 选项网格 */
.options-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.option-btn {
  padding: 20rpx 32rpx;
  background: rgba(241, 245, 249, 0.8);
  border: 2rpx solid transparent;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #475569;
  transition: all 0.2s ease;
}

.option-btn--active {
  background: rgba(102, 126, 234, 0.15);
  border-color: #667eea;
  color: #667eea;
  font-weight: 500;
}

.option-btn--hover {
  transform: scale(0.98);
  opacity: 0.8;
}

/* 自定义输入区域 */
.custom-input-area {
  margin-bottom: 24rpx;
}

.input-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #64748b;
}

/* 完成状态 */
.completed-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 48rpx 32rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.9);
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -8rpx 32rpx rgba(102, 126, 234, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.completed-icon {
  width: 120rpx;
  height: 120rpx;
  background: rgba(16, 185, 129, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.completed-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
}

.completed-desc {
  font-size: 26rpx;
  color: #64748b;
}

/* ========== 编辑模式样式 ========== */

/* 表单容器 */
.form-container {
  position: relative;
  z-index: 1;
  padding: calc(env(safe-area-inset-top) + 24rpx) 32rpx 32rpx;
}

/* 表单卡片 */
.form-card {
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.2);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  flex: 1;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 表单字段 */
.form-field {
  margin-bottom: 24rpx;
}

.form-field:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #475569;
  font-weight: 500;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.flex-1 {
  flex: 1;
}

/* 玻璃输入框 */
.glass-input {
  --td-input-bg-color: rgba(241, 245, 249, 0.8);
  --td-input-border-radius: 20rpx;
  --td-input-vertical-padding: 24rpx;
}

.glass-textarea {
  --td-textarea-background-color: rgba(241, 245, 249, 0.8);
  --td-textarea-border-radius: 20rpx;
  --td-textarea-padding: 24rpx;
}

.glass-textarea.small {
  --td-textarea-padding: 20rpx;
}

/* 活动列表 */
.activities-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  background: rgba(241, 245, 249, 0.6);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.2);
}

.activity-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.activity-index {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.activity-actions {
  display: flex;
  gap: 16rpx;
}

.delete-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(239, 68, 68, 0.1);
  border-radius: 50%;
}

/* 时长字段 */
.duration-field {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
}

.duration-input {
  flex: 1;
  --td-input-bg-color: transparent;
  --td-input-vertical-padding: 0;
}

.duration-unit {
  font-size: 26rpx;
  color: #64748b;
}

/* 空状态 */
.empty-activities {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  gap: 16rpx;
}

.empty-activities text {
  font-size: 26rpx;
  color: #94a3b8;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.8);
}

.submit-btn {
  --td-button-primary-bg-color: #667eea;
  --td-button-primary-border-color: transparent;
  --td-button-border-radius: 24rpx;
  --td-button-large-height: 100rpx;
  --td-button-large-font-size: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.submit-btn t-icon {
  margin-right: 12rpx;
}

/* 玻璃卡片通用样式 */
.glass-card {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
}
