.page {
  min-height: 100vh;
  background: linear-gradient(145deg, #f0f4ff 0%, #faf5ff 50%, #ecfdf5 100%);
  position: relative;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
}

/* 自定义导航栏样式 */
.custom-navbar {
  --td-navbar-bg-color: rgba(255, 255, 255, 0.85);
  --td-navbar-title-font-size: 34rpx;
  --td-navbar-title-color: #1e293b;
}

/* 装饰背景 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.5;
}

.orb-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  top: -100rpx;
  right: -100rpx;
  animation: float1 8s ease-in-out infinite;
}

.orb-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #f093fb, #f5576c);
  bottom: 200rpx;
  left: -80rpx;
  animation: float2 10s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-30rpx, 30rpx) scale(1.1); }
}

@keyframes float2 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(20rpx, -20rpx) scale(1.05); }
}

/* 表单容器 */
.form-container {
  position: relative;
  z-index: 1;
  padding: calc(env(safe-area-inset-top) + 96rpx + 24rpx) 32rpx 32rpx;
}

/* 表单卡片 */
.form-card {
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.2);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  flex: 1;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 表单字段 */
.form-field {
  margin-bottom: 24rpx;
}

.form-field:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #475569;
  font-weight: 500;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.flex-1 {
  flex: 1;
}

/* 玻璃输入框 */
.glass-input {
  --td-input-bg-color: rgba(241, 245, 249, 0.8);
  --td-input-border-radius: 20rpx;
  --td-input-vertical-padding: 24rpx;
}

.glass-textarea {
  --td-textarea-background-color: rgba(241, 245, 249, 0.8);
  --td-textarea-border-radius: 20rpx;
  --td-textarea-padding: 24rpx;
}

.glass-textarea.small {
  --td-textarea-padding: 20rpx;
}

/* 活动列表 */
.activities-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  background: rgba(241, 245, 249, 0.6);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.2);
}

.activity-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.activity-index {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.activity-actions {
  display: flex;
  gap: 16rpx;
}

.delete-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(239, 68, 68, 0.1);
  border-radius: 50%;
}

/* 时长字段 */
.duration-field {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
}

.duration-input {
  flex: 1;
  --td-input-bg-color: transparent;
  --td-input-vertical-padding: 0;
}

.duration-unit {
  font-size: 26rpx;
  color: #64748b;
}

/* 空状态 */
.empty-activities {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  gap: 16rpx;
}

.empty-activities text {
  font-size: 26rpx;
  color: #94a3b8;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.8);
}

.submit-btn {
  --td-button-primary-bg-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --td-button-primary-border-color: transparent;
  --td-button-border-radius: 24rpx;
  --td-button-large-height: 100rpx;
  --td-button-large-font-size: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.submit-btn t-icon {
  margin-right: 12rpx;
}
