.page {
  padding: 32rpx;
}

.form-field {
  margin-bottom: 24rpx;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  color: #475569;
}

.input,
.textarea {
  width: 100%;
  padding: 20rpx;
  border-radius: 20rpx;
  background: #f1f5f9;
}

.activities-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.activity-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.05);
}
