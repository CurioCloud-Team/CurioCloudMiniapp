.page {
  padding: 32rpx;
}

.chat-box {
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.message {
  margin-bottom: 16rpx;
  padding: 18rpx 20rpx;
  border-radius: 18rpx;
}

.message.ai {
  background: #e0f2fe;
  color: #0f172a;
}

.message.user {
  background: #d1fae5;
  color: #065f46;
  text-align: right;
}

.question-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.05);
}

.question-title {
  font-weight: 600;
  margin-bottom: 16rpx;
}

.option {
  margin: 8rpx 0;
  border-radius: 999rpx;
}

.answer-input {
  background: #f1f5f9;
  border-radius: 16rpx;
  padding: 16rpx;
  min-height: 160rpx;
  margin: 16rpx 0;
}

.completed {
  text-align: center;
}
