.page {
  min-height: 100vh;
  background: linear-gradient(145deg, #f0f4ff 0%, #faf5ff 50%, #ecfdf5 100%);
  position: relative;
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
}

/* 自定义导航栏样式 */
.custom-navbar {
  --td-navbar-bg-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --td-navbar-title-font-size: 34rpx;
  --td-navbar-title-color: #fff;
  --td-navbar-left-arrow-color: #fff;
}

.header-action {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 16rpx;
}

/* 装饰背景 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.4;
}

.orb-1 {
  width: 500rpx;
  height: 500rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  top: -150rpx;
  right: -150rpx;
  animation: float1 8s ease-in-out infinite;
}

.orb-2 {
  width: 350rpx;
  height: 350rpx;
  background: linear-gradient(135deg, #f093fb, #f5576c);
  bottom: 300rpx;
  left: -100rpx;
  animation: float2 10s ease-in-out infinite;
}

.orb-3 {
  width: 250rpx;
  height: 250rpx;
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  bottom: 100rpx;
  right: -50rpx;
  animation: float3 12s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-30rpx, 30rpx) scale(1.1); }
}

@keyframes float2 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(20rpx, -20rpx) scale(1.05); }
}

@keyframes float3 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-15rpx, 25rpx) scale(1.08); }
}

/* 英雄卡片 */
.hero-card {
  position: relative;
  margin: calc(env(safe-area-inset-top) + 96rpx) 0 0;
  padding: 80rpx 32rpx 48rpx;
  overflow: hidden;
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 60rpx 60rpx;
}

.hero-content {
  position: relative;
  z-index: 1;
}

.plan-badges {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.plan-badges .t-tag {
  --td-tag-light-bg-color: rgba(255, 255, 255, 0.2);
  --td-tag-light-color: #fff;
}

.plan-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 24rpx;
  line-height: 1.3;
}

.plan-meta {
  display: flex;
  gap: 32rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: rgba(255, 255, 255, 0.85);
  font-size: 26rpx;
}

/* 内容区域 */
.content-area {
  position: relative;
  z-index: 1;
  padding: 24rpx 32rpx;
  margin-top: -24rpx;
}

/* 内容卡片 */
.section-card {
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.section-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.objective-icon {
  background: rgba(245, 158, 11, 0.15);
}

.outline-icon {
  background: rgba(102, 126, 234, 0.15);
}

.activity-icon {
  background: rgba(16, 185, 129, 0.15);
}

.section-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.section-count {
  font-size: 24rpx;
  color: #64748b;
  background: rgba(100, 116, 139, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.section-content {
  color: #475569;
  font-size: 28rpx;
  line-height: 1.7;
}

.objective-text {
  color: #475569;
}

.empty-text {
  color: #94a3b8;
  font-style: italic;
}

/* 大纲列表 */
.outline-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.outline-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.06);
  border-radius: 16rpx;
}

.outline-marker {
  min-width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
}

.outline-text {
  flex: 1;
  line-height: 1.6;
  color: #334155;
}

/* 活动列表 */
.activity-list {
  display: flex;
  flex-direction: column;
}

.activity-card {
  display: flex;
  gap: 20rpx;
}

.activity-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 48rpx;
}

.activity-index {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
  flex-shrink: 0;
}

.activity-line {
  width: 3rpx;
  flex: 1;
  background: linear-gradient(to bottom, #10b981, rgba(16, 185, 129, 0.1));
  margin: 8rpx 0;
  border-radius: 2rpx;
}

.activity-body {
  flex: 1;
  padding-bottom: 24rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.activity-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
}

.activity-duration {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #64748b;
  background: rgba(100, 116, 139, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
}

.activity-desc {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.8);
}

.action-grid {
  display: flex;
  gap: 20rpx;
}

.action-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 28rpx 0;
  border-radius: 24rpx;
  font-weight: 500;
}

.primary-action {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.primary-action .action-label {
  color: #fff;
}

.secondary-action {
  background: rgba(102, 126, 234, 0.1);
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.secondary-action .action-label {
  color: #667eea;
}

.action-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-label {
  font-size: 30rpx;
}
