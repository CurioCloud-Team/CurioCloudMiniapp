.auth-page {
  min-height: 100vh;
  padding: 80rpx 48rpx;
  background: linear-gradient(180deg, #eef2ff, #ffffff 40%);
}

.hero {
  margin-bottom: 48rpx;
}

.brand {
  font-size: 48rpx;
  font-weight: 700;
}

.subtitle {
  display: block;
  margin-top: 12rpx;
  color: #64748b;
}

.form-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 24rpx 48rpx rgba(15, 23, 42, 0.08);
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
}

.form-description {
  color: #94a3b8;
  margin-top: 8rpx;
  margin-bottom: 32rpx;
}

.form-field {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 24rpx;
  color: #475569;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  border-radius: 20rpx;
  background: #f8fafc;
}

.actions button {
  margin-top: 16rpx;
}

.primary {
  width: 100%;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 0;
}

.ghost {
  width: 100%;
  border: 2rpx solid #cbd5f5;
  color: #1d4ed8;
  border-radius: 20rpx;
  padding: 24rpx 0;
}

.link {
  width: 100%;
  background: transparent;
  color: #64748b;
}
