@import "../login/index.wxss";

/* 登录链接样式 */
.login-link {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx 0;
  color: #6366f1;
  font-size: 28rpx;
}

.login-link .link-text {
  font-weight: 500;
}

.submit-btn {
  --td-button-primary-bg-color: #6366f1;
  --td-button-primary-border-color: transparent;
  --td-button-large-height: 96rpx;
  --td-button-large-font-size: 32rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%) !important;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.35);
}

/* 提示卡片 */
.tips-card.glass-card {
  margin-top: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.45);
}

.tips-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-weight: 600;
  color: #4338ca;
  margin-bottom: 16rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-content text {
  font-size: 26rpx;
  color: #6366f1;
  opacity: 0.8;
}
