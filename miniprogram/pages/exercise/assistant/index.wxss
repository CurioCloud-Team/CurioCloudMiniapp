.page {
  min-height: 100vh;
  background: linear-gradient(145deg, #f0f4ff 0%, #faf5ff 50%, #ecfdf5 100%);
  position: relative;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 自定义导航栏样式 */
.custom-navbar {
  --td-navbar-bg-color: rgba(255, 255, 255, 0.85);
  --td-navbar-title-font-size: 34rpx;
  --td-navbar-title-color: #1e293b;
}

/* 装饰背景 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.4;
}

.orb-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  top: -100rpx;
  right: -100rpx;
  animation: float1 8s ease-in-out infinite;
}

.orb-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #f093fb, #f5576c);
  bottom: 300rpx;
  left: -80rpx;
  animation: float2 10s ease-in-out infinite;
}

.orb-3 {
  width: 250rpx;
  height: 250rpx;
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  bottom: 100rpx;
  right: -60rpx;
  animation: float3 12s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-30rpx, 30rpx) scale(1.1); }
}

@keyframes float2 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(20rpx, -20rpx) scale(1.05); }
}

@keyframes float3 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-15rpx, 25rpx) scale(1.08); }
}

/* 内容区域 */
.content-area {
  position: relative;
  z-index: 1;
  padding: calc(env(safe-area-inset-top) + 96rpx + 24rpx) 32rpx 32rpx;
}

/* 提示卡片 */
.tip-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 28rpx 32rpx;
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(251, 191, 36, 0.1) 100%);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(245, 158, 11, 0.2);
}

.tip-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip-content {
  flex: 1;
}

.tip-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #92400e;
  margin-bottom: 4rpx;
}

.tip-desc {
  display: block;
  font-size: 24rpx;
  color: #b45309;
}

/* 表单卡片 */
.form-card {
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
}

.form-field {
  margin-bottom: 36rpx;
}

.form-field:last-child {
  margin-bottom: 0;
}

.field-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.label {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #1e293b;
}

.count-badge {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
  background: rgba(102, 126, 234, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

/* 选择器触发器 */
.picker-trigger {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: rgba(241, 245, 249, 0.8);
  border-radius: 20rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.2);
}

.picker-value {
  font-size: 28rpx;
  color: #334155;
}

/* 题型选项 */
.type-options {
  display: flex;
  gap: 16rpx;
}

.type-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 16rpx;
  background: rgba(241, 245, 249, 0.8);
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  color: #64748b;
  transition: all 0.3s ease;
}

.type-option.active {
  background: rgba(102, 126, 234, 0.15);
  border-color: #667eea;
  color: #667eea;
}

.type-option text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 难度选项 */
.difficulty-options {
  display: flex;
  gap: 16rpx;
}

.difficulty-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 16rpx;
  background: rgba(241, 245, 249, 0.8);
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.difficulty-option text {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.difficulty-option.active.level-0 {
  background: rgba(16, 185, 129, 0.15);
  border-color: #10b981;
}

.difficulty-option.active.level-0 text {
  color: #10b981;
}

.difficulty-option.active.level-1 {
  background: rgba(245, 158, 11, 0.15);
  border-color: #f59e0b;
}

.difficulty-option.active.level-1 text {
  color: #f59e0b;
}

.difficulty-option.active.level-2 {
  background: rgba(239, 68, 68, 0.15);
  border-color: #ef4444;
}

.difficulty-option.active.level-2 text {
  color: #ef4444;
}

.difficulty-dots {
  display: flex;
  gap: 6rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #cbd5e1;
}

.level-0 .dot.filled:nth-child(1) { background: #10b981; }
.level-1 .dot.filled:nth-child(1),
.level-1 .dot.filled:nth-child(2) { background: #f59e0b; }
.level-2 .dot.filled { background: #ef4444; }

/* 滑块容器 */
.slider-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx 0;
}

.slider-min, .slider-max {
  font-size: 24rpx;
  color: #94a3b8;
  min-width: 40rpx;
  text-align: center;
}

.custom-slider {
  flex: 1;
  --td-slider-bar-bg-color: rgba(102, 126, 234, 0.2);
  --td-slider-active-bg-color: linear-gradient(90deg, #667eea, #764ba2);
  --td-slider-dot-bg-color: #fff;
  --td-slider-dot-size: 40rpx;
}

/* 操作区域 */
.action-area {
  margin-top: 32rpx;
}

.generate-btn {
  --td-button-primary-bg-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --td-button-primary-border-color: transparent;
  --td-button-border-radius: 24rpx;
  --td-button-large-height: 100rpx;
  --td-button-large-font-size: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.generate-btn t-icon {
  margin-right: 12rpx;
}
