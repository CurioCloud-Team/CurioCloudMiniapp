.page {
  min-height: 100vh;
  background: linear-gradient(145deg, #f0f4ff 0%, #faf5ff 50%, #ecfdf5 100%);
  position: relative;
}

/* 装饰背景 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.4;
}

.orb-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  top: -100rpx;
  right: -100rpx;
  animation: float1 8s ease-in-out infinite;
}

.orb-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  bottom: 200rpx;
  left: -80rpx;
  animation: float2 10s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-30rpx, 30rpx) scale(1.1); }
}

@keyframes float2 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(20rpx, -20rpx) scale(1.05); }
}

/* TDesign 导航栏样式 */
.custom-navbar {
  --td-navbar-bg-color: rgba(255, 255, 255, 0.85);
  --td-navbar-title-font-size: 34rpx;
  --td-navbar-title-color: #1e293b;
  --td-navbar-left-arrow-color: #1e293b;
}

/* 内容区域 */
.content-area {
  position: relative;
  z-index: 1;
  padding: calc(env(safe-area-inset-top) + 96rpx + 24rpx) 32rpx 160rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 48rpx;
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #667eea;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(148, 163, 184, 0.3);
}

/* 题目列表 */
.question-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.question-card {
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
}

.question-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.question-number {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.question-content {
  margin-bottom: 20rpx;
}

.question-text {
  font-size: 30rpx;
  color: #1e293b;
  line-height: 1.7;
  font-weight: 500;
}

/* 选项列表 */
.choices-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.choice-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 20rpx;
  background: rgba(241, 245, 249, 0.8);
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.choice-item.correct {
  background: rgba(16, 185, 129, 0.1);
  border-color: #10b981;
}

.choice-label {
  min-width: 48rpx;
  height: 48rpx;
  background: rgba(100, 116, 139, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #64748b;
}

.choice-item.correct .choice-label {
  background: #10b981;
  color: #fff;
}

.choice-text {
  flex: 1;
  font-size: 28rpx;
  color: #475569;
  line-height: 1.6;
}

/* 答案区域 */
.answer-section {
  padding: 20rpx;
  background: rgba(16, 185, 129, 0.08);
  border-radius: 16rpx;
  border-left: 4rpx solid #10b981;
  margin-bottom: 16rpx;
}

.answer-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.answer-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #10b981;
}

.answer-text {
  font-size: 28rpx;
  color: #065f46;
  line-height: 1.6;
}

/* 解析区域 */
.explanation-section {
  padding: 20rpx;
  background: rgba(245, 158, 11, 0.08);
  border-radius: 16rpx;
  border-left: 4rpx solid #f59e0b;
}

.explanation-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.explanation-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #f59e0b;
}

.explanation-text {
  font-size: 26rpx;
  color: #92400e;
  line-height: 1.6;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.8);
}

.action-btn {
  --td-button-primary-bg-color: #667eea;
  --td-button-primary-border-color: transparent;
  --td-button-border-radius: 24rpx;
  --td-button-large-height: 100rpx;
  --td-button-large-font-size: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.action-btn t-icon {
  margin-right: 12rpx;
}

/* 空状态 */
.empty-state {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 32rpx;
}

.empty-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  padding: 60rpx;
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
}

.empty-desc {
  font-size: 28rpx;
  color: #94a3b8;
}

.empty-btn {
  margin-top: 16rpx;
  --td-button-primary-bg-color: #667eea;
  --td-button-border-radius: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
}
