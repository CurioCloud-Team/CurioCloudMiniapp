.page {
  min-height: 100vh;
  background: linear-gradient(145deg, #f0f4ff 0%, #faf5ff 50%, #ecfdf5 100%);
  position: relative;
}

/* 自定义导航栏样式 */
.custom-navbar {
  --td-navbar-bg-color: rgba(255, 255, 255, 0.85);
  --td-navbar-title-font-size: 34rpx;
  --td-navbar-title-color: #1e293b;
}

.header-action {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

/* 装饰背景 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.4;
}

.orb-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  top: -100rpx;
  right: -100rpx;
  animation: float1 8s ease-in-out infinite;
}

.orb-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #f59e0b, #ef4444);
  bottom: 200rpx;
  left: -80rpx;
  animation: float2 10s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-30rpx, 30rpx) scale(1.1); }
}

@keyframes float2 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(20rpx, -20rpx) scale(1.05); }
}

/* 内容区域 */
.content-area {
  position: relative;
  z-index: 1;
  padding: calc(env(safe-area-inset-top) + 96rpx + 24rpx) 32rpx 48rpx;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.stat-chip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #475569;
}

/* 幻灯片列表 */
.slides-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.slide-card {
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
}

/* 幻灯片头部 */
.slide-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.15);
}

.slide-number {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  flex-shrink: 0;
}

.slide-title-area {
  flex: 1;
  min-width: 0;
}

.slide-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 幻灯片预览 */
.slide-preview {
  padding: 28rpx;
}

.preview-content {
  min-height: 200rpx;
  padding: 24rpx;
  background: rgba(241, 245, 249, 0.6);
  border-radius: 20rpx;
  border: 1rpx dashed rgba(148, 163, 184, 0.3);
}

.content-text {
  font-size: 28rpx;
  color: #334155;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* 备注区域 */
.slide-notes {
  padding: 20rpx 28rpx 24rpx;
  background: rgba(245, 158, 11, 0.06);
  border-top: 1rpx solid rgba(245, 158, 11, 0.15);
}

.notes-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.notes-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #92400e;
}

.notes-text {
  font-size: 26rpx;
  color: #78350f;
  line-height: 1.6;
}

/* 加载状态 */
.loading-state {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 32rpx;
}

.loading-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding: 60rpx;
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

/* 空状态 */
.empty-state {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 32rpx;
}

.empty-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  padding: 60rpx;
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
}

.empty-desc {
  font-size: 28rpx;
  color: #94a3b8;
}
