<view class="page">
  <view class="section">
    <view class="status-card">
      <text class="title">项目 {{pptProjectId}}</text>
      <text class="status">当前状态：{{statusLabel}}</text>
      <button class="primary" bindtap="refresh" loading="{{loading}}">刷新状态</button>
      <button class="ghost" bindtap="openViewer" wx:if="{{canPreview}}">查看内容</button>
    </view>
  </view>
</view>

<bottom-tab-bar active="ppt"></bottom-tab-bar>
